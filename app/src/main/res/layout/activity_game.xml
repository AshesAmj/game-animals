<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    tools:context="com.example.qinjunhong.game.gameActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:onClick="btnimg1"
        app:srcCompat="@drawable/rhino"
        tools:layout_editor_absoluteY="79dp"
        tools:layout_editor_absoluteX="71dp"
        android:layout_above="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginBottom="71dp"
        />

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:onClick="btnimg2"
        app:srcCompat="@drawable/bear"
        tools:layout_editor_absoluteY="79dp"
        tools:layout_editor_absoluteX="230dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/cat"
        android:onClick="btnimg3"
        tools:layout_editor_absoluteY="212dp"
        tools:layout_editor_absoluteX="71dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/tiger"
        android:onClick="btnimg4"
        tools:layout_editor_absoluteY="212dp"
        tools:layout_editor_absoluteX="230dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:text="bear"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="338dp"
        tools:layout_editor_absoluteX="137dp"
        android:layout_marginBottom="142dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
